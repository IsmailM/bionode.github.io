  .content-title Examples
  .content-horizontal-rule
  .content-sub-container.codeExamples
    code
      <!--npm install bionode-ncbi -g-->
      p # Download all bacteria gff files
      h3 $ bionode-ncbi download gff bacteria
      <!-- npm install bionode-sra -g -->
      p # Download all Sequence Read Archives for arthropoda and extract a fastq for each
      h3 $ bionode-ncbi download sra arthropoda | bionode-sra fastq-dump
      <!-- npm install bionode-fasta -g -->
      p # Parse sequences in a fasta file into one JSON object per line, collect the ones that match chr11 and in fasta
      h3 $ cat genome.fasta | bionode-fasta | grep chr11 | bionode-fasta --write
      <!-- npm install dat -->
      <!-- dat init -->
      p # Retrieves all the metadata about formicidae on the assembly database and save into a Dat repository
      h3 $ bionode-ncbi search assembly formicidae | dat import --json
